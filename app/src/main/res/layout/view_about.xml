<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <include
        android:id="@+id/head"
        layout="@layout/head_secod" />

    <LinearLayout
        android:id="@+id/about_log"
        android:layout_width="match_parent"
        android:layout_height="339dp"
        android:layout_below="@+id/head"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/about_log" />

        <TextView
            android:id="@+id/tv_version"
            style="@style/about_text"
            android:text="版本号v1.0.1" />

        <TextView
            style="@style/about_text"
            android:text="关注微信账号：VR热播" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/user_agreement"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_below="@id/about_log"
        android:background="#ffffff"
        android:gravity="center_vertical">

        <TextView
            style="@style/mine_text"
            android:layout_toRightOf="@id/iv_about"
            android:paddingLeft="6dp"
            android:text="用户协议" />

        <ImageView
            android:id="@+id/enter_user_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:src="@mipmap/enter" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/feedback"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@id/user_agreement"
        android:layout_marginTop="2dp"
        android:background="#ffffff"
        android:gravity="center_vertical">

        <TextView
            style="@style/mine_text"
            android:layout_toRightOf="@id/iv_about"
            android:paddingLeft="6dp"
            android:text="建议反馈" />

        <ImageView
            android:id="@+id/enter_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:src="@mipmap/enter" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/translucentview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head"
        android:background="#88000000"
        android:visibility="invisible">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/ll_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="用户须知"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/user_agreement"
                    android:textColor="#000000"
                    android:textSize="17sp" />
            </LinearLayout>
        </ScrollView>



    </FrameLayout>


</RelativeLayout>