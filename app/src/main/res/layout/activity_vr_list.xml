<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/vr_bg"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/container1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/scape_bg"
            android:gravity="center">

            <ImageView
                android:id="@+id/cache_no1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/default_cach" />
            <LinearLayout
                android:id="@+id/ivBack1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/buttom"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_cancel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="14px"
                    android:src="@mipmap/vr_back" />

                <TextView
                    android:id="@+id/tv_fanhui1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="返回上一级"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/container2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/scape_bg"
            android:gravity="center">

            <ImageView
                android:id="@+id/cache_no2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/default_cach" />
            <LinearLayout
                android:id="@+id/ivBack2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/buttom"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_cancel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="14px"
                    android:src="@mipmap/vr_back" />

                <TextView
                    android:id="@+id/tv_fanhui2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="返回上一级"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="#99ffffff" />
</RelativeLayout>