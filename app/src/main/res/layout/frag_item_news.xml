<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/head"
        layout="@layout/layout_head"/>
    <com.hotcast.vr.pullrefreshview.PullToRefreshListView
        android:id="@+id/lv_item_news"
        android:layout_below="@id/head"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@android:color/white"
        android:divider="@drawable/fengge_line"
        android:dividerHeight="0.5dp"
        android:fadingEdge="none"
        android:scrollbars="none" />
    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:src="@mipmap/change_to_vr"
        fab:fab_colorNormal="#00000000"
        fab:fab_colorPressed="#00000000"
        fab:fab_colorRipple="#00000000" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar4"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:id="@+id/iv_noNet"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/nonet"/>

</RelativeLayout>